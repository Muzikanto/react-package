{
    "compilerOptions": {
        "baseUrl": "./",
        "allowSyntheticDefaultImports": true,
        "module": "commonjs",
        "target": "es5",
        "lib": ["es2015", "es5", "es6", "es7", "es2017", "dom", "es2020"],
        "downlevelIteration": true,
        "sourceMap": true,
        "allowJs": false,
        "jsx": "react",
        "moduleResolution": "node",
        "rootDir": "./src",
        "outDir": "dist",
        "noImplicitReturns": false,
        "noImplicitThis": false,
        "noImplicitAny": false,
        "strictNullChecks": false,
        "declaration": true,
        "paths": {
            "@muzikanto/components/*": ["./*"]
        },
        "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "storybook-static"]
}

