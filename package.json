{
    "name": "@muzikanto/components",
    "version": "1.0.0",
    "scripts": {
        "start": "start-storybook -p 5001",
        "clean": "rm -f dist && rm -f storybook-static",
        "build:stories": "build-storybook",
        "build:components": "webpack",
        "build": "npm run clean && tsc -b . && npm run build:stories && npm run build:components",
        "linter": "tslint -c tslint.json 'src/**/*.ts' --fix",
        "test": "tslint -c tslint.json 'src/**/*.ts' && jest"
    },
    "jest": {
        "rootDir": "src"
    },
    "peerDependencies": {
        "react": "16.12.0",
        "react-dom": "16.12.0",
        "@types/react": "16.9"
    },
    "dependencies": {
        "awesome-typescript-loader": "^5.2.1",
        "mini-css-extract-plugin": "^0.9.0"
    },
    "devDependencies": {
        "@storybook/addon-knobs": "5.3.13",
        "@storybook/addon-links": "5.3.13",
        "@storybook/addon-options": "5.3.13",
        "@storybook/addon-storysource": "5.3.13",
        "@storybook/addons": "5.3.13",
        "@storybook/react": "5.3.13",
        "@types/react-dom": "16.9",
        "@types/storybook__addon-knobs": "5.2.1",
        "@types/storybook__react": "5.2.1",
        "install-peers": "^1.0.3",
        "tslint": "^6.0.0",
        "typescript": "~3.8.2",
        "webpack": "4.41.6",
        "webpack-cli": "3.3.11"
    }
}
